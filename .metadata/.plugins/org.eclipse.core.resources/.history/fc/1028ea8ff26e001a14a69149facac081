package comics;

import java.text.ParseException;
import java.util.Scanner;

public class ComicControl {

	public static void main(String[] args) throws ParseException {
		//Posso criar os arraylists ao iniciar o programa
		Scanner teclado = new Scanner(System.in);
		int opcao = '1';
		while (opcao != 0 ) {
			System.out.println("******************************************");
			System.out.println("*********** Comics Control ***************");
			System.out.println("------------------------------------------");
			System.out.println("Escolha uma opção para Continuar \n");
			System.out.println("1 - Cadastros \n");
			System.out.println("2 - Emprestimos \n");
			System.out.println("0 - Sair \n");
			opcao = teclado.nextInt();
			teclado.nextLine();
		}
		
		switch (opcao) {
		case 1:
			System.out.println("Cadastros");
			break;
		case 2:
			System.out.println("Emprestimos");
			break;

		default:
			break;
		}

	}

	
/*

Menu Inicial

A - Cadastros
    1 - Criar Coleção
    2 - Nova Caixa
    3 - Incluir Revista
    4 - Cadastrar Amigo
 
B - Empréstimos
    1 - Novo Empréstimo
    2 - Consultar Empréstimo
    3 - Registrar Devolução


criar novo array em cada classe (inserir no array cada novo objeto)
*/
}

